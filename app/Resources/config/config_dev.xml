<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:framework="http://symfony.com/schema/dic/symfony"
           xmlns:webprofiler="http://symfony.com/schema/dic/webprofiler"
           xmlns:monolog="http://symfony.com/schema/dic/monolog"
           xmlns:assetic="http://symfony.com/schema/dic/assetic">
    <imports>
        <import resource="config.xml"/>
    </imports>

    <framework:config>
        <framework:router resource="%kernel.root_dir%/Resources/config/routing_dev.xml" strict-requirements="true" />
        <framework:profiler enabled="true" only-exceptions="false" />
    </framework:config>

    <assetic:config use-controller="%use_assetic_controller%" />

    <monolog:config>
        <monolog:handler name="main" type="stream" path="%kernel.logs_dir%/%kernel.environment%.log" level="debug" />
        <monolog:handler name="console" type="console" bubble="false" />
        <monolog:handler name="firephp" type="firephp" level="info" />
        <monolog:handler name="chromephp" type="chromephp" level="info" />
    </monolog:config>

    <webprofiler:config intercept-redirects="%debug_redirects%" toolbar="%debug_toolbar%" />
</container>
