<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="CS587Grader\SubmissionBundle\Entity\Grade">
        <id name="assignment" association-key="true" />
        <id name="user" association-key="true" />

        <field name="grade" type="integer" nullable="true" />
        <field name="fileKey" type="string" length="288" nullable="true" />
        <field name="reason" type="string" length="64" nullable="true" />
        <field name="extendedReason" type="blob" nullable="true" />

        <many-to-one target-entity="CS587Grader\SubmissionBundle\Entity\Assignment" field="assignment" inversed-by="submissions">
            <join-column referenced-column-name="name" />
        </many-to-one>
        <many-to-one target-entity="CS587Grader\AccountBundle\Entity\User" field="user" inversed-by="submissions" />
    </entity>
</doctrine-mapping>
