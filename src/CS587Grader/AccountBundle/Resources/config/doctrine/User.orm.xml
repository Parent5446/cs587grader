<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="CS587Grader\AccountBundle\Entity\User">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="accessToken" type="string" length="255" />
        <field name="accessTokenSecret" type="string" length="255" />
        <field name="refreshToken" type="string" length="255" nullable="true" />
        <field name="repository" type="string" length="255" nullable="true" />

        <one-to-many target-entity="CS587Grader\SubmissionBundle\Entity\Grade" mapped-by="user" field="submissions" />

        <attribute-overrides>
            <attribute-override name="email">
                <field column="no_email" type="string" length="255" nullable="true" />
            </attribute-override>
            <attribute-override name="emailCanonical">
                <field column="no_email_canonical" type="string" length="255" unique="false" nullable="true" />
            </attribute-override>
            <attribute-override name="salt">
                <field column="no_salt" type="string" nullable="true" />
            </attribute-override>
            <attribute-override name="password">
                <field column="no_password" type="string" nullable="true" />
            </attribute-override>
        </attribute-overrides>
    </entity>
</doctrine-mapping>
